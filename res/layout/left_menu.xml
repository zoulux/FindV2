<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="3" >

        <com.zgrjb.find.view.CircleImageView
            android:id="@+id/id_frontAvartar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/child" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/main_ui_user_set_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/left_menu_main_ui_user_set_layout_min_height"
            android:padding="@dimen/left_menu_main_ui_user_set_layout_padding" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="个人资料"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/left_menu_main_ui_user_set_layout_textview1_size" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/left_menu_main_ui_user_set_layout_imageview_layout_margin_right"
                android:src="@drawable/go" />

            <TextView
                android:id="@+id/nickText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_toLeftOf="@+id/imageView1"
                android:text="@string/left_menu_nick_text"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/left_menu_main_ui_user_set_layout_nickText_textSize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/base_horizontal_line" />

        <RelativeLayout
            android:id="@+id/main_ui_new_message_set_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/left_menu_main_ui_new_message_set_layout_minHeight"
            android:padding="@dimen/left_menu_main_ui_new_message_set_layout_padding" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="接受新消息通知"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/left_menu_main_ui_new_message_set_layout_textView3_textSize" />

            <ImageView
                android:id="@+id/main_ui_new_message_set_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/left_menu_main_ui_new_message_set_true_marginRight"
                android:src="@drawable/check_box_true" />

            <ImageView
                android:id="@+id/main_ui_new_message_set_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/left_menu_main_ui_new_message_set_false_marginRight"
                android:src="@drawable/check_box_false"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/base_horizontal_line" />

        <RelativeLayout
            android:id="@+id/main_ui_voice_set_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/left_menu_main_ui_voice_set_layout_minHeight"
            android:padding="@dimen/left_menu_main_ui_voice_set_layout_padding" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="声音"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/main_ui_voice_set_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:src="@drawable/check_box_true" />

            <ImageView
                android:id="@+id/main_ui_voice_set_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:src="@drawable/check_box_false"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:id="@+id/viewVoice"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/base_horizontal_line" />

        <RelativeLayout
            android:id="@+id/main_ui_vibrate_set_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="震动"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/main_ui_vibrate_set_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:src="@drawable/check_box_true" />

            <ImageView
                android:id="@+id/main_ui_vibrate_set_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:src="@drawable/check_box_false"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:id="@+id/viewVibrate"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/base_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/main_ui_quit_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/main_ui_quit_bt"
                android:text="退出登录" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </LinearLayout>

</LinearLayout>